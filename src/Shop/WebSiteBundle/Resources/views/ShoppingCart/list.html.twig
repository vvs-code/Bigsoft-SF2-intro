{% extends 'base.html.twig' %}

{% block title %}Shopping cart list{% endblock %}
{% block body %}
    <ul class="pagination">
        {% for product in products %}
            <li>{{ common.printProduct(product) }}</li>
            <li>{{ common.emptyPostForm(path('clear_shopping_cart'), 'Clear cart') }}</li>
        {% else %}
            <li>No items</li>
        {% endfor %}
    </ul>
{% endblock %}

